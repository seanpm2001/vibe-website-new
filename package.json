{
  "name": "vibe-website-new",
  "version": "0.0.0",
  "scripts": {
    "dev": "vitepress-fc dev --root=docs --host",
    "build": "vite build",
    "docs-build": "rimraf docs/dist && cross-env NODE_ENV=production vitepress-fc build --root=docs",
    "docs-serve": "cross-env NODE_ENV=production vitepress-fc serve --root=docs",
    "docs-build-serve": "cross-env NODE_ENV=true yarn docs-build && yarn docs-serve",
    "docs-deploy": "gh-pages -d docs/dist -t true",
    "docs-build-deploy": "yarn docs-build && yarn docs-deploy",
    "lint": "eslint  src/**/*.{vue,js}"
  },
  "dependencies": {
    "element-plus": "^1.3.0-beta.10"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.1.0",
    "@vitejs/plugin-vue-jsx": "^1.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-plugin-vue": "^8.4.0",
    "gh-pages": "^3.2.3",
    "rimraf": "^3.0.2",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-vue": "^6.0.0-beta.11",
    "rollup-plugin-visualizer": "^5.5.4",
    "sass": "^1.49.4",
    "vite": "^2.6.13",
    "vite-plugin-style-import": "^1.4.1",
    "vitepress-for-component": "^0.16.9",
    "unplugin-auto-import": "^0.5.11",
    "unplugin-vue-components": "^0.17.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "rules": {
      "jsx-quotes": 2,
      "arrow-parens": 0,
      "generator-star-spacing": 0,
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "indent": [
        "error",
        2
      ],
      "space-before-function-paren": 0,
      "eol-last": 1,
      "eqeqeq": 2,
      "no-undef": 0,
      "no-unused-vars": "off",
      "no-useless-escape": "off",
      "max-len": [
        "error",
        800,
        4,
        {
          "ignoreUrls": true,
          "ignorePattern": "<path.*"
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all",
          "ignoreReadBeforeAssign": false
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
